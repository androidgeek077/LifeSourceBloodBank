<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_height="175dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="#E6E2E2"
        android:padding="5dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_weight="0.5"
                app:cardElevation="1dp"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_name"
                        android:textSize="20sp"
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/baloo_bhai"
                        android:paddingLeft="16dp"
                        android:text="Name" />

                    <TextView
                        android:textColor="#000"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:id="@+id/DateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="10dp"
                        android:text="Name"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="0.5"
                app:cardElevation="1dp"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_phone_call"
                        android:id="@+id/donorPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="16dp"
                        android:text="Name" />

                    <TextView
                        android:textColor="#000"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:id="@+id/AddStoryTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_plus"
                        android:drawablePadding="10dp"
                        android:text="Add Story"
                        android:layout_alignParentRight="true" />
                    <TextView
                        android:textColor="#000"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:id="@+id/blodTypeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_blood"
                        android:drawablePadding="10dp"
                        android:text="Name"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/donationReqTV"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Requested"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/viewStoryIV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".1"
                        android:src="@drawable/ic_visibility" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
